	<mvc:resources mapping="/backendAdmin/dist/plugins/**" location="/backendAdmin/dist/plugins/" />
	
	<mvc:resources mapping="/backendAdmin/dist/**" location="/backendAdmin/dist/" />
	
	<mvc:resources mapping="/images/**" location="/images/" />
	
	<mvc:resources mapping="/css/**" location="/css/" />
	
	<mvc:resources mapping="/fonts/**" location="/fonts" />
	
	<mvc:resources mapping="/syncServer/**" location="/syncServer/" />
	
	<mvc:resources mapping="/testServer/**" location="/testServer/" />
	
	<mvc:resources mapping="/register/**" location="/register/" />
	
	<mvc:resources mapping="/nonAuthPage/**" location="/nonAuthPage/" />
	
	<mvc:resources mapping="/js/**" location="/js/" />
	
	<mvc:resources mapping="/include/**" location="/include/" />
	
	<mvc:resources mapping="/favicon.ico" location="/favicon.ico" />

	<mvc:resources mapping="/download/**" location="/download/" />
	
	<mvc:resources mapping="/assets/**" location="/assets/" />
	
