<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>receipt_db</display-name>


    <!--Login form-->

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Backend Resources</web-resource-name>
            <url-pattern>/backendAdmin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>一般使用者</role-name>
            <role-name>管理者</role-name>
            <role-name>一般公司管理者</role-name>
            <role-name>一般公司會計者</role-name>
            <role-name>一般公司使用者</role-name>
            <role-name>一般公司開立發票人員</role-name>
            <role-name>一般公司中獎清冊使用者</role-name>
            <role-name>會計公司使用者</role-name>
            <role-name>POS公司使用者</role-name>
            <role-name>POS介接公司使用者</role-name>
            <role-name>一般介接公司使用者</role-name>
            <role-name>一般介接公司中獎清冊使用者</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>一般使用者</role-name>
    </security-role>
    <security-role>
        <role-name>管理者</role-name>
    </security-role>
    <security-role>
        <role-name>一般公司管理者</role-name>
    </security-role>
    <security-role>
        <role-name>一般公司會計者</role-name>
    </security-role>
    <security-role>
        <role-name>一般公司使用者</role-name>
    </security-role>
    <security-role>
        <role-name>一般公司開立發票人員</role-name>
    </security-role>
    <security-role>
        <role-name>一般公司中獎清冊使用者</role-name>
    </security-role>
    <security-role>
        <role-name>會計公司使用者</role-name>
    </security-role>
    <security-role>
        <role-name>POS公司使用者</role-name>
    </security-role>
    <security-role>
        <role-name>POS介接公司使用者</role-name>
    </security-role>
    <security-role>
        <role-name>一般介接公司使用者</role-name>
    </security-role>
    <security-role>
        <role-name>一般介接公司中獎清冊使用者</role-name>
    </security-role>
    <security-role>
        <role-name>停用</role-name>
    </security-role>
    <security-role>
        <role-name>密碼錯誤</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>BackendRealm</realm-name>
        <form-login-config>
            <form-login-page>/backendAdmin/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
