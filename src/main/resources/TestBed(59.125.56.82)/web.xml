    <filter>
        <filter-name>CharacterEncoding</filter-name>
        <filter-class>com.gate.web.filters.ChangeCharsetFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>LogDataFilter</filter-name>
        <filter-class>com.gate.web.filters.LogDataFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogDataFilter</filter-name>
        <url-pattern>/backendAdmin/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>SessionClean</filter-name>
        <filter-class>com.gate.web.filters.SessionCleanFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionClean</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CompanyIdFilter</filter-name>
        <filter-class>com.gate.web.filters.CompanyIdFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CompanyIdFilter</filter-name>
        <url-pattern>/backendAdmin/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>com.gate.web.servlets.backend.common.UploadServlet</servlet-class>
        <multipart-config>
            <location>C:/temp</location>
            <max-file-size>5242880</max-file-size>
            <max-request-size>5242880</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>

    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/backendAdmin/uploadServlet</url-pattern>
    </servlet-mapping>


    <session-config>
        <session-timeout>160</session-timeout>
    </session-config>

    <!--<welcome-file-list>-->
        <!--<welcome-file>/backendAdmin/template/template.jsp</welcome-file>-->
    <!--</welcome-file-list>-->

    <welcome-file-list>
        <welcome-file>backendAdmin/loginServlet</welcome-file>
    </welcome-file-list>



    <!--<error-page>-->
        <!--<location>/general_error.jsp</location>-->
    <!--</error-page>-->

    <error-page>
        <error-code>408</error-code>
        <location>/login_error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/login_error.jsp</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>
