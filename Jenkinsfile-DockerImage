pipeline {
 agent any
 stages {
    stage('Build War') {
        agent {
            docker {
                image 'maven:3.6.3-jdk-8'
                args '-v $HOME/.m2:/root/.m2 -v'
                reuseNode false
            }
        }
        steps {
            sh 'mvn clean package'
            // 將 WAR 檔案保存到名為 "war-stash" 的 stash 中
            stash name: 'war-stash', includes: 'target/ROOT.war'
        }
    }
    stage('Build Image') {
        agent{
            docker{
              image 'docker'
              reuseNode true
            }
        }
        steps {
              script{
                  unstash 'war-stash'
                  sh "ls -l /target"
                  dockerImage = docker.build("egui/charge-system:test", "-f  ./Dockerfile .")
              }
        }
    }
 }
}